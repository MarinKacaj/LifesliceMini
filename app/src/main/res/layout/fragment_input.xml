<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marin.dev.lifeslicemini.fragment.InputFragment">

    <EditText
        android:id="@+id/tag_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeActionLabel="@string/submit_tag_query" />

    <Button
        android:id="@+id/tag_query_submission_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_tag_query" />
</LinearLayout>
